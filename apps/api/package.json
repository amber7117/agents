{
  "name": "@app/api",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts --out-dir dist",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:init": "tsx src/scripts/init-db.ts",
    "db:reset": "prisma migrate reset --force && npm run db:init"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@pkg/connectors-whatsapp": "workspace:*",
    "@pkg/db": "workspace:*",
    "@whiskeysockets/baileys": "^6.7.8",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "qrcode": "^1.5.4",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.12.12",
    "bcryptjs": "^3.0.3",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "redlock": "5.0.0-beta.2",
    "tsup": "^8.5.0",
    "tsx": "^4.19.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.6.3"
  }
}
