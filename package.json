{
  "name": "wa-monorepo",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "workspaces": ["packages/*", "apps/*/*", "apps/*"],
  "scripts": {
    "dev": "concurrently -n api,web -c blue,green 'bun --filter @app/api dev' 'bun --filter @app/web dev'",
    "dev:api": "cd apps/api && bun run dev",
    "dev:web": "cd apps/web && bun run dev",
    "build": "bun --filter @app/api build && bun --filter @app/web build",
    "prisma:generate": "bun --filter @pkg/db prisma:generate",
    "prisma:migrate": "bun --filter @pkg/db migrate"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "concurrently": "^9.0.1"
  }
}