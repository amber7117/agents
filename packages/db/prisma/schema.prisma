generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String             @id @default(cuid())
  email           String             @unique
  password        String
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  sessions        Session[]
  apiCredentials  ApiCredential[]
  channelSessions ChannelSession[]
  chats           Chat[]
  contacts        Contact[]
  messages        Message[]
  agentBindings   UserAgentBinding[]
  modules         UserModule?
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  createdAt DateTime @default(now())
  label     String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Contact {
  id          String    @id @default(cuid())
  userId      String
  whatsappId  String
  name        String?
  phoneNumber String?
  avatar      String?
  isBlocked   Boolean   @default(false)
  isMuted     Boolean   @default(false)
  lastSeen    DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  chats       Chat[]
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages    Message[]

  @@unique([userId, whatsappId])
  @@map("contacts")
}

model Chat {
  id            String    @id @default(cuid())
  userId        String
  contactId     String
  isArchived    Boolean   @default(false)
  isPinned      Boolean   @default(false)
  unreadCount   Int       @default(0)
  lastMessage   String?
  lastMessageAt DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  contact       Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages      Message[]

  @@unique([userId, contactId])
  @@map("chats")
}

model Message {
  id                String           @id @default(cuid())
  userId            String
  chatId            String
  contactId         String
  whatsappMessageId String?
  direction         MessageDirection
  content           String
  messageType       MessageType      @default(TEXT)
  mediaUrl          String?
  mimeType          String?
  fileName          String?
  fileSize          Int?
  status            MessageStatus    @default(SENT)
  isStarred         Boolean          @default(false)
  isDeleted         Boolean          @default(false)
  replyToId         String?
  sentAt            DateTime
  deliveredAt       DateTime?
  readAt            DateTime?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  chat              Chat             @relation(fields: [chatId], references: [id], onDelete: Cascade)
  contact           Contact          @relation(fields: [contactId], references: [id], onDelete: Cascade)
  replyTo           Message?         @relation("MessageReplies", fields: [replyToId], references: [id])
  replies           Message[]        @relation("MessageReplies")
  user              User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("messages")
}

model UserModule {
  id          String   @id @default(cuid())
  userId      String   @unique
  waEnabled   Boolean  @default(true)
  tgEnabled   Boolean  @default(false)
  aiEnabled   Boolean  @default(false)
  flowEnabled Boolean  @default(false)
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_modules")
}

model ApiCredential {
  id        String   @id @default(cuid())
  userId    String
  provider  String   // OPENAI, DEEPSEEK, ANTHROPIC, GROK, GEMINI
  apiKeyEnc String   // Encrypted API key
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
  @@map("api_credentials")
}

model AgentTemplate {
  id          String   @id @default(cuid())
  name        String
  description String?
  prompt      String
  provider    String   // Default provider for this template
  model       String   // Default model for this template
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bindings UserAgentBinding[]

  @@map("agent_templates")
}

model UserAgentBinding {
  id            String   @id @default(cuid())
  userId        String
  channel       String   // WA, TG
  templateId    String
  enabled       Boolean  @default(true)
  modelOverride String?  // Override default model from template
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  template AgentTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@unique([userId, channel])
  @@map("user_agent_bindings")
}

model MessageLog {
  id        String           @id @default(cuid())
  userId    String
  channel   Channel
  direction MessageDirection
  peer      String
  text      String
  aiUsed    Boolean          @default(false)
  createdAt DateTime         @default(now())

  @@index([userId, channel])
  @@map("message_logs")
}

model ChannelSession {
  id            String    @id @default(cuid())
  userId        String
  channel       Channel
  channelId     String    // 频道实例 ID（如 whatsapp-1699876543210）
  phoneNumber   String?   // 电话号码
  name          String?   // 频道名称
  state         String
  deviceLabel   String?
  lastQRAt      DateTime?
  lastConnected DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, channelId], name: "userId_channelId")
  @@index([userId, channel])
  @@map("channel_sessions")
}

enum MessageDirection {
  INCOMING
  OUTGOING
}

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
  LOCATION
  CONTACT
  STICKER
  SYSTEM
}

enum MessageStatus {
  SENT
  DELIVERED
  READ
  FAILED
}

enum Channel {
  WA
  TG
}

enum AiProvider {
  OPENAI
  DEEPSEEK
  ANTHROPIC
  GROK
  GEMINI
}

enum Provider {
  OPENAI
  DEEPSEEK
  ANTHROPIC
  GROK
  GEMINI
}
