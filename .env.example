# ================================
# 数据库配置
# ================================

# PostgreSQL 连接字符串
# 格式: postgresql://用户名:密码@主机:端口/数据库名
DATABASE_URL="postgresql://user:password@localhost:5432/wa_db"

# ================================
# JWT 配置
# ================================

# JWT 密钥（请使用强密码！）
# 生成方式: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-please-change-this"

# JWT 过期时间（默认 7 天）
JWT_EXPIRES_IN="7d"

# ================================
# 服务器配置
# ================================

# API 服务器端口
PORT=3000

# 前端 CORS 源（开发环境）
CORS_ORIGIN="http://localhost:5173"

# 生产环境 CORS 源（多个用逗号分隔）
# CORS_ORIGIN="https://your-domain.com,https://www.your-domain.com"

# Node 环境
NODE_ENV="development"

# ================================
# WhatsApp 配置
# ================================

# WhatsApp 会话存储路径（相对于 apps/api）
WA_AUTH_ROOT="./wa-auth"

# WhatsApp 最大重连次数
WA_MAX_RECONNECT_ATTEMPTS=5

# WhatsApp 重连延迟（毫秒）
WA_RECONNECT_DELAY=5000

# ================================
# 日志配置
# ================================

# 日志级别: debug | info | warn | error
LOG_LEVEL="info"

# 是否启用彩色日志
LOG_COLOR=true

# ================================
# Telegram 配置（待实现）
# ================================

# Telegram Bot Token
# TG_BOT_TOKEN="your-bot-token"

# Telegram API ID
# TG_API_ID="your-api-id"

# Telegram API Hash
# TG_API_HASH="your-api-hash"

# ================================
# AI 配置（待实现）
# ================================

# OpenAI API Key
# OPENAI_API_KEY="sk-..."

# OpenAI 模型
# OPENAI_MODEL="gpt-4"

# Anthropic API Key
# ANTHROPIC_API_KEY="sk-ant-..."

# Anthropic 模型
# ANTHROPIC_MODEL="claude-3-opus-20240229"

# ================================
# Redis 配置（可选，用于缓存）
# ================================

# Redis URL
# REDIS_URL="redis://localhost:6379"

# ================================
# 邮件配置（可选，用于通知）
# ================================

# SMTP 主机
# SMTP_HOST="smtp.gmail.com"

# SMTP 端口
# SMTP_PORT=587

# SMTP 用户名
# SMTP_USER="your-email@gmail.com"

# SMTP 密码
# SMTP_PASSWORD="your-password"

# 发件人邮箱
# SMTP_FROM="noreply@your-domain.com"

# ================================
# Sentry 配置（可选，用于错误追踪）
# ================================

# Sentry DSN
# SENTRY_DSN="https://...@sentry.io/..."

# ================================
# 其他配置
# ================================

# 上传文件最大大小（MB）
MAX_UPLOAD_SIZE=10

# 是否启用调试模式
DEBUG=false

# 应用名称
APP_NAME="WhatsApp Platform"

# 应用版本
APP_VERSION="1.0.0"
